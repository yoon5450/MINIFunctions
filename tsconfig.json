{
  "include": ["src"], // 자동으로 tsc할 디렉터리 설정
  "compilerOptions": {
    "outDir": "dist", // 나올 디렉터리
    "target": "esnext", // js 버전
    "skipLibCheck": true, // 라이브러리 체크 스킵
    "moduleDetection": "force", // 파일 내 import나 export가 없어도 무조건 모듈로 간주함.
    "module": "esnext", // 모듈 설정
    "strict": true // 엄격 모드 활성화
  }
}
